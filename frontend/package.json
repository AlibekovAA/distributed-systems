{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Frontend for e-commerce website",
  "scripts": {
    "start": "lite-server --config bs-config.json",
    "build": "tsc && npm run copy-files",
    "watch": "tsc -w",
    "copy-files": "cp -r src/*.html src/styles src/modules dist/ && find src -type f -name \"*.css\" -exec cp --parents {} dist/ \\;"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "lite-server": "^2.6.1",
    "http-proxy-middleware": "^3.0.3",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
