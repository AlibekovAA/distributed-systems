{
  "port": 3000,
  "files": ["./src/**/*.{html,htm,css,js}"],
  "notify": false,
  "ui": false,
  "ghostMode": false,
  "open": false,
  "reloadDebounce": 1000,
  "reloadThrottle": 1000,
  "server": {
    "baseDir": "./dist",
    "routes": {
      "/node_modules": "node_modules"
    },
    "middleware": [
      {
        "route": "/auth",
        "handle": {
          "target": "http://localhost:8000",
          "changeOrigin": true,
          "secure": false,
          "ws": true,
          "logLevel": "debug",
          "pathRewrite": {
            "^/auth": "/auth"
          }
        }
      }
    ]
  }
}
