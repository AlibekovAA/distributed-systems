{
  "port": 3000,
  "files": ["./src/**/*.{html,htm,css,js}"],
  "notify": false,
  "ui": false,
  "single": false,
  "ghostMode": false,
  "open": false,
  "reloadDebounce": 100,
  "reloadThrottle": 100,
  "server": {
    "baseDir": "./dist",
    "routes": {
      "/node_modules": "node_modules",
      "/": "./dist",
      "/pages": "./dist/pages",
      "/modules": "./dist/modules",
      "/styles": "./dist/styles",
      "/utils": "./dist/utils",
      "/services": "./dist/services"
    },
    "middleware": [
      {
        "route": "/auth",
        "handle": {
          "target": "http://localhost:8000",
          "changeOrigin": true,
          "secure": false,
          "ws": false,
          "logLevel": "error",
          "pathRewrite": {
            "^/auth": "/auth"
          }
        }
      }
    ]
  },
  "watchOptions": {
    "ignored": ["node_modules", ".git"]
  }
}
